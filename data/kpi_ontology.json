{
  "domains": [
    {
      "name": "ecommerce",
      "kpis": [
        {
          "name": "Revenue",
          "description": "Total income from sales.",
          "formula_template": "SUM({amount_column})",
          "required_components": [
            {
              "role": "amount_column",
              "semantic_type": "Numeric Measure",
              "description_keywords": ["amount", "price", "cost", "total", "revenue", "value"]
            },
            {
              "role": "date_column",
              "semantic_type": "Date/Time",
              "description_keywords": ["date", "time", "when", "created", "updated"]
            }
          ]
        },
        {
          "name": "Customer Count",
          "description": "Total number of unique customers.",
          "formula_template": "COUNT(DISTINCT {customer_id_column})",
          "required_components": [
            {
              "role": "customer_id_column",
              "semantic_type": "Identifier",
              "description_keywords": ["customer", "id", "key", "user", "client"]
            }
          ]
        }
      ]
    },
    {
      "name": "hr",
      "kpis": [
        {
          "name": "Attrition Rate",
          "description": "Percentage of employees who left.",
          "formula_template": "(COUNT({employee_id_column} WHERE {status_column} = 'terminated') / COUNT({employee_id_column})) * 100",
          "required_components": [
            {
              "role": "employee_id_column",
              "semantic_type": "Identifier",
              "description_keywords": ["employee", "id", "key", "emp", "staff"]
            },
            {
              "role": "status_column",
              "semantic_type": "Category",
              "description_keywords": ["status", "state", "employment", "active", "terminated"]
            }
          ]
        }
      ]
    }
  ]
}